{
    "include": ["src/*"],
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ESNext",
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowArbitraryExtensions": false,
        "allowImportingTsExtensions": false,
        "allowUnreachableCode": false,
        "strict": true
    }
}